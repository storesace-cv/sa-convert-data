#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LAUNCHER_SCRIPT="$SCRIPT_DIR/scripts/launchers/launcher.sh"

if [ ! -x "$LAUNCHER_SCRIPT" ]; then
  echo "❌ Launcher script not found at $LAUNCHER_SCRIPT" >&2
  echo "   Ensure scripts/launchers/launcher.sh exists and is executable." >&2
  exit 1
fi

exec "$LAUNCHER_SCRIPT" "$@"
